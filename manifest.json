{
   "name": "markdown_previewer",
   "version": "1.0",
   "manifest_version": 2,
   "description": "Your description",
  "permissions": [
    "contextMenus"
  ],
   "background": { 
     "scripts": ["background.js"],
      "persistent": true
   },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "jquery.js", "content.js", "marked.esm.js" ],
      "css":["shareText.css"]
    }
  ]
}